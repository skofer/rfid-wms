# Auto detect text files and perform LF normalization
* text=auto
# Python
*.py text eol=lf
*.pyi text eol=lf
# Documentation
*.md text eol=lf
*.txt text eol=lf
*.rst text eol=lf
# Config files
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf
# Shell scripts
*.sh text eol=lf
*.bash text eol=lf
# Windows scripts
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf
# Binary files
*.db binary
*.sqlite binary
*.sqlite3 binary
*.pkl binary
*.pickle binary
*.pyc binary
*.pyo binary
*.pyd binary
*.so binary
*.dll filter=lfs diff=lfs merge=lfs -text
*.dylib binary
*.exe filter=lfs diff=lfs merge=lfs -text
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.pak filter=lfs diff=lfs merge=lfs -text
*.asar filter=lfs diff=lfs merge=lfs -text
*.bin filter=lfs diff=lfs merge=lfs -text
*.dat filter=lfs diff=lfs merge=lfs -text
